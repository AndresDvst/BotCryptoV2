# ========== BINANCE API ==========
# Obtén tus claves en: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# ========== BYBIT API (OPCIONAL) ==========
# Obtén tus claves en: https://www.bybit.com/app/user/api-management
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here

# ========== TELEGRAM BOT ==========
# 1. Busca @BotFather en Telegram
# 2. Envía /newbot y sigue las instrucciones
# 3. Copia el TOKEN que te da
# 4. Busca @userinfobot y envía /start para obtener tu CHAT_ID
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_BOT_CRYPTO=your_crypto_bot_token_here
TELEGRAM_BOT_MARKETS=your_markets_bot_token_here
TELEGRAM_BOT_SIGNALS=your_signals_bot_token_here

# ========== TWITTER API ==========
# Obtén tus claves en: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_secret_here

# ========== TWITTER LOGIN (OPCIONAL - Para Selenium) ==========
# Solo necesario si usas publicación automática con Selenium
# IMPORTANTE: Actualizar con tus credenciales reales en el archivo .env
TWITTER_USERNAME=your_twitter_username_here
TWITTER_PASSWORD=your_twitter_password_here

# ========== TWITTER CONFIGURACIÓN ==========
# Ejecutar en modo headless (sin ventana del navegador)
# Valores: true/false
TWITTER_HEADLESS=false

# Ruta al perfil de Chrome (opcional, para evitar login repetido)
# Ejemplo Windows: C:/Users/TuUsuario/AppData/Local/Google/Chrome/User Data
# Ejemplo Mac: /Users/TuUsuario/Library/Application Support/Google/Chrome
# Ejemplo Linux: /home/tuusuario/.config/google-chrome
CHROME_USER_DATA_DIR=

# ========== GOOGLE GEMINI API ==========
# Obtén tu clave en: https://makersuite.google.com/app/apikey
# o en: https://aistudio.google.com/
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key_here

# ========== MYSQL/BASE DE DATOS ==========
# IMPORTANTE: Configurar una contraseña segura
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=your_secure_mysql_password_here
MYSQL_DATABASE=crypto_bot
MYSQL_PORT=3306

# ========== DASHBOARD WEB ==========
# Credenciales para autenticación del dashboard (opcional)
# Si no se configura DASHBOARD_PASSWORD, el dashboard será accesible sin auth
DASHBOARD_USER=admin
DASHBOARD_PASSWORD=your_secure_dashboard_password_here
FLASK_SECRET_KEY=your_random_secret_key_here

# ========== CONFIGURACIÓN DEL BOT ==========
# Porcentaje mínimo de cambio para filtrar criptomonedas (default: 10)
MIN_CHANGE_PERCENT=10

# Rutas a las imágenes para los reportes
MORNING_IMAGE_PATH=./images/morning_report.png
REPORT_IMAGE_PATH=./images/crypto_report.png

# ========== NOTAS IMPORTANTES ==========
# 1. Copia este archivo a .env y completa tus claves reales
# 2. NUNCA subas el archivo .env a Git
# 3. Asegúrate de que .gitignore incluya .env
# 4. Rota tus claves si las expones accidentalmente
# 5. Usa contraseñas seguras (mínimo 12 caracteres, mezcla de caracteres)
